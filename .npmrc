# Use pnpm's strict peer dependencies
strict-peer-dependencies=false

# Automatically install peer dependencies
auto-install-peers=true

# Hoist all dependencies to the root node_modules
# Set to true if you want hoisting, false for isolated node_modules per package
shamefully-hoist=false

# Save exact versions in package.json (no ^ or ~)
save-exact=false

# Use workspace protocol for local packages
link-workspace-packages=true

# Shared lockfile at the root
shared-workspace-lockfile=true

# Public hoist pattern - hoist these to root node_modules
# public-hoist-pattern[]="*eslint*"
# public-hoist-pattern[]="*prettier*"

# Enable recursive installation in workspace
recursive-install=true

